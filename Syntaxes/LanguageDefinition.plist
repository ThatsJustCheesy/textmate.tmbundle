{
    name = "Language Definition (TextMate)";
    scopeName = "source.plist.language-definition";
    uuid = "101D6FC2-6CBD-11D9-B329-000D93347A42";
    fileTypes = (plist); 
    foldingStartMarker = "(/\\*|\\{|\\()"; 
    foldingStopMarker = "(\\*/|\\}|\\))"; 
    highlightPairs = ( ("(", ")"), ("[", "]"), ("{", "}") ); 
    smartTypingPairs = ( ("(", ")"), ("[", "]"), ("{", "}"), ("\"", "\""), ("'", "'") );
    increaseIndentPattern = "(\\{|\\()\\s*$"; 


    patterns = (
        {   name = "keywords.tm-language-def";
            match = "\\<(name|fileTypes|foldingStartMarker|foldingStopMarker|increaseIndentPattern|smartTypingPairs|highlightPairs|patterns|match|begin|end|swallow|include|uuid|scopeName|captures|firstLineMatch)\\>"; 
        },
        {   name = "invalid.deprecated.tm-language-def";
            match = "\\<(foregroundColor|backgroundColor|foregroundColor|fontStyle|elementForegroundColor|elementBackgroundColor|elementFontStyle|mode)\\>";
        },
        {   name = "comments.block.tm-language-def"; begin = "/\\*"; end = "\\*/"; },
        {   name = "comments.line.tm-language-def"; match = "//.*$"; },  
        {   name = "strings.single-quoted.tm-language-def";
            begin = "'(?=.*\')";
            end = "'";
            swallow = "\\\\.";
            patterns = (
                {   name = "invalid.deprecated.constants.colors.tm-language-def"; match = "#[0-9A-Fa-f]{6}"; },
                {   name = "strings.regexp.tm-language-def"; match = "(\\\\\\\\[tvnrfaewWdDsSuUlL]([*+?])?\\??|\\^|\\$|\\||\\.([*+?])?\\??)|\\\\\\\\[Az<>bB])"; },
            );
        },

        {   name = "strings.double-quoted.tm-language-def";
            begin = "\"(?=.*\")";
            end = "\"";
            swallow = "\\\\.";
            patterns = (
                {   name = "strings.regexp.tm-language-def"; match = "(\\\\\\\\[tvnrfaewWdDsSuUlL]([*+?])?\\??|\\^|\\$|\\||\\.([*+?])?\\??)|\\\\\\\\[Az<>bB])"; },
                {   name = "invalid.deprecated.constants.colors.tm-language-def"; match = "#[0-9A-Fa-f]{6}"; },
            );
        },
    ); 
}