{
    name = "Language Definition (TextMate)";
    scopeName = "source.plist.language-definition";
    uuid = "101D6FC2-6CBD-11D9-B329-000D93347A42";
    fileTypes = (plist); 
    foldingStartMarker = "(/\\*|\\{|\\()"; 
    foldingStopMarker = "(\\*/|\\}|\\))"; 

    patterns = (
        {   name = "keyword.tm-language-def";
            match = "\\<(name|fileTypes|foldingStartMarker|foldingStopMarker|patterns|match|begin|end|swallow|include|uuid|scopeName|captures|beginCaptures|endCaptures|firstLineMatch)\\>"; 
        },
        {   name = "invalid.deprecated.tm-language-def";
            match = "\\<(foregroundColor|backgroundColor|foregroundColor|fontStyle|elementForegroundColor|elementBackgroundColor|elementFontStyle|mode|highlightPairs|smartTypingPairs|increaseIndentPattern)\\>";
        },
        {   name = "comment.block.tm-language-def"; begin = "/\\*"; end = "\\*/"; },
        {   name = "comment.line.tm-language-def"; match = "//.*$"; },  
        {   name = "string.single-quoted.tm-language-def";
            begin = "'(?=.*\')";
            end = "'";
            swallow = "\\\\.";
            patterns = (
                {   name = "invalid.deprecated.constants.colors.tm-language-def"; match = "#[0-9A-Fa-f]{6}"; },
                {   name = "string.regexp.tm-language-def"; match = "(\\\\\\\\[tvnrfaewWdDsSuUlL]([*+?])?\\??|\\^|\\$|\\||\\.([*+?])?\\??)|\\\\\\\\[Az<>bB])"; },
            );
        },

        {   name = "string.double-quoted.tm-language-def";
            begin = "\"(?=.*\")";
            end = "\"";
            swallow = "\\\\.";
            patterns = (
                {   name = "string.regexp.tm-language-def"; match = "(\\\\\\\\[tvnrfaewWdDsSuUlL]([*+?])?\\??|\\^|\\$|\\||\\.([*+?])?\\??)|\\\\\\\\[Az<>bB])"; },
                {   name = "invalid.deprecated.constants.colors.tm-language-def"; match = "#[0-9A-Fa-f]{6}"; },
            );
        },
    ); 
}